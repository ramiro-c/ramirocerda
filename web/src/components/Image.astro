---
import { Image as AstroImg } from "astro:assets";

type Props = {
  image: {
    alt: string;
    url: string;
  };
  loading?: "lazy" | "eager";
};

const { image, loading = "eager" } = Astro.props;
const aspectRatio = 16 / 9;
---

<div class="image">
  <AstroImg
    src={image.url}
    width={1200}
    height={1200 / aspectRatio}
    alt={image.alt}
    loading={loading}
  />
</div>

<style>
  .image {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
    width: 100%;
  }

  .image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
  }
</style>
