---
import Image from "./Image.astro";

type Props = {
  title: string;
  url: string;
  img?: string;
};

const { title, url, img = "/default-post-image.jpg" } = Astro.props;
---

<a href={url} class="image-card">
  <div class="image-wrapper">
    <Image image={{ url: img, alt: title }} />
    <div class="card-info">
      <h2 class="card-title">{title}</h2>
    </div>
  </div>
</a>

<style>
  .image-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .image-wrapper {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 8px;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .card-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: #fff;
    transform: translateY(0);
    border-radius: 8px;

    transition: transform 0.2s ease;
  }

  .card-title {
    margin: 0;
    font-size: 1.2rem;
  }

  @media (min-width: 637px) {
    .image-card:hover {
      transform: translateY(-5px);
    }
  }

  :global(html.dark) .card-info {
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
    border-radius: 8px;
  }
</style>
