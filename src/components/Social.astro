---
const { platform, username } = Astro.props;
---

<a
  href={`https://www.${platform.toLowerCase()}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  {platform}
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
    font-size: 0.9rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 1;
  }
</style>
