---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";

const blogTitle = import.meta.env.PUBLIC_BLOG_TITLE;
---

<header>
  <div class="header-content">
    <div class="logo">
      <a href="/">{blogTitle}</a>
    </div>
    <div class="nav-wrapper">
      <Navigation />
      <ThemeIcon />
      <Hamburger />
    </div>
  </div>
</header>

<style>
  header {
    padding: 1rem 0;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 2rem;
    position: relative;
    z-index: 100;
    background: var(--bg-color);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 80ch;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    color: inherit;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  :global(html.dark) header {
    border-bottom-color: #2d2d2d;
  }
</style>

<script>
  import "../scripts/menu.js";
</script>
